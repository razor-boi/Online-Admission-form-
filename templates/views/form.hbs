 function addSubject(subject) {
  const checkboxList = document.getElementById('checkboxList');
  const newSubject = document.createElement('div');
  newSubject.innerHTML = `
    <label>
      <input type="checkbox" name="subjects[]" value="${subject}">
      ${subject}
    </label>
  `;
  checkboxList.appendChild(newSubject);
}

// This runs after the page has fully loaded
document.addEventListener("DOMContentLoaded", () => {
  const params = new URLSearchParams(window.location.search); // Get URL parameters
  const id = params.get("id"); // Get ?id= from URL (e.g., ?id=ba1)
  const checkboxList = document.getElementById("checkboxList");

  if (id) {
    // Look through each course category (ba, bcom, bsc, etc.)
    for (let category in subjectData) {
      // If this course + semester/year (e.g., ba1) exists in that category
      if (subjectData[category][id]) {
        const subjects = subjectData[category][id];
        // Add each subject to the DOM using our function
        subjects.forEach(subject => {
          addSubject(subject);
        });
        return; // Exit loop once matched
      }
    }
  }

  // If no subjects found for the given ID
  checkboxList.innerHTML = "<p style='color:red; padding: .625rem;'>No subjects found for the selected course.</p>";
});


    
    
       
