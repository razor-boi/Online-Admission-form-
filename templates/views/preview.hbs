<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Previewing page</title>
  <link rel="stylesheet" href="css/preview.css">
</head>
<body>
  <!-- HEADER -->
  {{#each students}}
  <form action="/submit-form" method="post">
<div style="display: flex; align-items: center; justify-content: space-between; padding: 20px; border-bottom: 2px solid #000;">

  <!-- Left: Student Photo -->
   <div style="flex: 0 0 auto; text-align: right;">
    <label for="sr_no" style="font-weight: bold;">Sr No</label><br>
    <input type="text" id="sr_no" name="sr_no" value="{{serial_number}}" style="width: 120px; padding: 5px; margin-top: 5px;">
  </div>

  <!-- Center: College Logo + Heading -->
  <div style="flex-grow: 1; text-align: center;">
    <img src="LOGO-1.png" alt="College Logo" style="height: 90px; width: 90px; display: block; margin: 0 auto 10px;">
    <h2 style="margin: 5px 0;">GOVT. COLLEGE INDORA (H.P.)</h2>
    <h3 style="margin: 5px 0;">APPLICATION FORM FOR ........... SESSION ()</h3>
  </div>

  <!-- Right: Sr No -->
 

  <div style="flex: 0 0 auto;">
    <img src="{{passport_photo}}" alt="Student Photo" style="height: 160px; width: 130px;  border: 1px solid #000;" >
  </div>

</div>

<div class="flex-row">
  <div>
    <label for="roll_number">Roll Number</label>
    <input type="text" name="roll_number" id="roll_number" placeholder="Enter roll number if assigned" value="{{roll_number}}" />
  </div>
  <div>
    <label for="university_roll">University Roll Number</label>
    <input type="text" name="university_roll" id="university_roll" placeholder="Enter university roll number if assigned" value="{{university_roll}}" />
  </div>
  <div>
    <label for="university_reg">University Registration Number</label>
    <input type="text" name="university_reg" id="university_reg" value="{{university_reg}}" />
  </div>
</div>

    </div>

    <!-- Course Section -->
    <div class="section">
      <h2>Course Information</h2>
      <label for="course">Selected Course</label>
      <input type="text" id="subjects" value="{{course}} ">
            
    </div>

<div class="section">
  <h2>Personal Information</h2>
  <div style="display: flex; gap: 20px; align-items: flex-start;">

    <!-- Left Column: Signature Box -->
    <div style="flex: 0 0 140px; display: flex; flex-direction: column; justify-content: flex-end; height: 100%;">
      <div style="height: 160px; width: 130px; border: 1px solid #000; margin-top: auto;">
        <!-- This will be filled via JS with signature image -->
        <img id="signaturePreview" src="/{{signature_photo}}" alt="Signature" style="width: 100%; height: 100%; object-fit: fill;">
      </div>
      <label style="text-align: center; font-size: 14px;">Signature</label>
    </div>

    <!-- Right Section: Fields -->
    <div style="flex-grow: 1;">
      <div class="flex-row">
        <div class="flex-col">
          <label>Student Full Name</label>
          <input type="text" name="student_name" value="{{student_name}}" >
        </div>
        <div class="flex-col">
          <label>Father's Name</label>
          <input type="text" name="father_name" value="{{father_name}}" >
        </div>
        <div class="flex-col">
          <label>Mother's Name</label>
          <input type="text" name="mother_name" value="{{mother_name}}" >
        </div>
      </div>

      <div class="flex-row">
        <div class="flex-col">
          <label>Phone Number</label>
          <input type="tel" name="student_phone" value="{{student_phone}}" >
        </div>
        <div class="flex-col">
          <label>Email</label>
          <input type="email" name="email" value="{{email}}" >
        </div>
        <div class="flex-col">
          <label>DOB</label>
          <input type="date" name="dob" value="{{formatDate dob}}" >
        </div>
      </div>

      <div class="flex-row">
        <div class="flex-col">
          <label>Aadhaar</label>
          <input type="text" name="aadhaar" value="{{aadhaar}}" >
        </div>
        <div class="flex-col">
          <label>Blood Group</label>
          <input type="text" name="blood_group" value="{{blood_group}}" >
        </div>
        <div class="flex-col">
          <label>Category</label>
         
          <input type="text" name="category" id="category" value="{{category}}" />
          <label for="sub_category">Sub-Category</label>
          <input type="text" name="category" id="category" value="{{sub_category}}" />
        </div>
      </div>
    </div>
  </div>
</div>


    <!-- Bank Details -->
  <div class="bank-details">
  <h3>Bank Account Details</h3>

  <div class="form-row">
    <!-- Bank Name -->
    <div class="form-group">
      <label for="bank_name">Bank Name</label>
      <input type="text" name="bank_name" id="bank_name"  value="{{bank_name}}"/>
    </div>

    <!-- Account Number -->
    <div class="form-group">
      <label for="account_no">Bank Account Number</label>
      <input type="text" name="account_no" id="account_no" value="{{account_no}}" />
    </div>

    <!-- IFSC Code -->
    <div class="form-group">
      <label for="ifsc">IFSC Code</label>
      <input type="text" name="ifsc" id="ifsc" value="{{ifsc}}" />
    </div>
  </div>
</div>

    <!-- Addresses -->
    <div class="address-section">
  <div class="address-block">
    <label for="correspondence_address">Correspondence Address</label>
    <textarea name="correspondence_address" id="correspondence_address" rows="3" >{{correspondence_address}}</textarea>
  </div>

  <div class="address-block">
    <label for="permanent_address">Permanent Address</label>
    <textarea name="permanent_address" id="permanent_address" rows="3" >{{permanent_address}}</textarea>
  </div>
</div>

  <label for="subjects">Selected Subjects</label>
  <input type="text" name="subjects" id="subjects" value="{{subjects}}" />

   <div class="exam-table-section">
